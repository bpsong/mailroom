# Application Configuration
# Environment: development, production, or testing
APP_ENV=development

# Host address (use 127.0.0.1 in production behind reverse proxy)
APP_HOST=0.0.0.0

# Port number
APP_PORT=8000

# REQUIRED: Secret key for session encryption
# PRODUCTION: Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Must be at least 32 characters in production
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Database Configuration
# Path to DuckDB database file (use absolute path in production)
DATABASE_PATH=./data/mailroom.duckdb

# Checkpoint interval in seconds (300 = 5 minutes)
DATABASE_CHECKPOINT_INTERVAL=300

# File Storage Configuration
# Directory for uploaded package photos (use absolute path in production)
UPLOAD_DIR=./uploads

# Maximum file upload size in bytes (5242880 = 5MB)
MAX_UPLOAD_SIZE=5242880

# Comma-separated list of allowed MIME types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Security Configuration
# Session timeout in seconds (1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Maximum failed login attempts before account lockout
MAX_FAILED_LOGINS=5

# Account lockout duration in seconds (1800 = 30 minutes)
ACCOUNT_LOCKOUT_DURATION=1800

# Minimum password length
PASSWORD_MIN_LENGTH=12

# Number of previous passwords to prevent reuse
PASSWORD_HISTORY_COUNT=3

# Argon2 Password Hashing Settings
# Number of iterations (higher = more secure but slower)
ARGON2_TIME_COST=3

# Memory usage in KiB (19456 = 19MB)
ARGON2_MEMORY_COST=19456

# Number of parallel threads
ARGON2_PARALLELISM=1

# Rate Limiting Configuration
# Maximum login requests per minute per IP address
RATE_LIMIT_LOGIN=10

# Maximum API requests per minute per user
RATE_LIMIT_API=100

# Logging Configuration
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file (use absolute path in production)
LOG_FILE=./logs/mailroom.log

# Log rotation frequency: daily, weekly, monthly
LOG_ROTATION=weekly

# Number of days to retain logs
LOG_RETENTION_DAYS=365

# HTTPS Configuration (for Caddy reverse proxy)
# Domain name for HTTPS certificates
DOMAIN=mailroom.company.local

# Path to TLS certificate file
TLS_CERT_PATH=./certs/cert.pem

# Path to TLS private key file
TLS_KEY_PATH=./certs/key.pem
